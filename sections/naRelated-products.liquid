{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
.related-products ul.grid.product-grid li.grid__item {
    background-color: #fff !important;
    padding: 20px;
}
  .related-products ul.grid.product-grid li.grid__item .card__inner.color-background-2.gradient.ratio {
    background-color: #fff;
}
  .related-products ul.grid.product-grid li.grid__item .card__inner .card__media .media img{object-fit:contain;}
  .related-products ul.grid.product-grid {
    justify-content: center;
}
  h2.related-products__heading.inline-richtext.h2 {
    text-align: center;
    font-size: 20px;
    font-style: normal;
    font-weight: 900;
    line-height: normal;
    text-transform: uppercase;
}
  product-recommendations.related-products {
    padding-top: 120px;
    padding-bottom: 70px;
}
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<style>
product-recommendations.related-products.page-width.section-template--20143086928164__6da4da50-b3d6-4a3e-a98b-bc46bad08166-padding.isolate.scroll-trigger.animate--slide-in.product-recommendations--loaded {
    max-width: 1290px;
    margin: 0 auto;
}  
.naRecomend .slick-prev:before{
    content: url(https://cdn.shopify.com/s/files/1/0799/7872/5668/files/Frame_4931.svg?v=1697636183)!important;
  }
.naRecomend .slick-next:before{
     content: url(https://cdn.shopify.com/s/files/1/0799/7872/5668/files/Frame_4931_1.svg?v=1697636876)!important;
  }
.related-products__heading{  
    font-size: 20px;
    font-style: normal;
    font-weight: 900;
    line-height: normal;
    text-transform: uppercase;
    text-align: center;  
}  
.related-products ul.grid.product-grid li.grid__item {
    margin: 0  6px!important;
}  
.naRecomend .slick-next:before, .slick-prev:before{
  opacity: 1;
}  
@media(max-width: 768px){
.related-products__heading {
    margin-top: 30px;
    background: #fff;
    margin-top: 0;
    margin-bottom: 0;
    padding: 30px 5px;
}
.naRecomend .slick-next {
    right: 11px;
}
.naRecomend .slick-prev {
    left: 11px!important;
    z-index: 999;
} 
.related-products ul.grid.product-grid li.grid__item {
    background-color: transparent !important;
    margin: 0  6px!important;
}
  
}  
</style>
<div class="color-{{ section.settings.color_scheme }} gradient no-js-hidden">
  <product-recommendations
    class="related-products page-width section-{{ section.id }}-padding isolate"
    data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}&limit={{ section.settings.products_to_show }}"
  >
    {% if recommendations.performed and recommendations.products_count > 0 %}
      <h2 class="related-products__heading inline-richtext {{ section.settings.heading_size }}">
        {{ section.settings.heading }}
      </h2>
   <div>
     <div class="naRecomend">
      <ul
        class="slider--{{ section.id }} grid product-grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down slider--{{ section.id }}"
        role="list"
      >
        {% for recommendation in recommendations.products %}
          <li class="grid__item">
            {% render 'card-product2',
              card_product: recommendation,
              media_aspect_ratio: section.settings.image_ratio,
              image_shape: section.settings.image_shape,
              show_secondary_image: section.settings.show_secondary_image,
              show_vendor: section.settings.show_vendor,
              show_rating: section.settings.show_rating
            %}
          </li>
        {% endfor %}
      </ul>  
      </div> 
   </div> 
    {% endif %} 
  </product-recommendations>
  {% if section.settings.image_shape == 'arch' %}
    {% render 'mask-arch' %}
  {%- endif -%}
</div>
